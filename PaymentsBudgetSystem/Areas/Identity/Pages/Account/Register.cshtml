@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/PaymentsBudgetSystem.styles.css" asp-append-version="true" />

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    #institution-select {
        width: 100px;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="checkbox" id="checkbox1" name="checkbox1" class="exclusive-checkbox" />
            <label for="checkbox1">Регистрирай Първостепенен РБ</label>

            <input type="checkbox" id="checkbox2" name="checkbox2" class="exclusive-checkbox" />
            <label for="checkbox2">Регистрирай Второстепенен РБ</label>

            <div id="additionalField" style="display: none;">
@*                <label for="inputField">Additional Field:</label>
                <input type="text" id="inputField" name="inputField" />*@
                
                <button class="btn form-select">button</button>                
            </div>

            <script>
                $(document).ready(function () {
                    $("#checkbox1").change(function () {
                        if (this.checked) {
                            $("#checkbox2").prop("checked", false);
                            $("#additionalField").hide();
                        }
                    });

                    $("#checkbox2").change(function () {
                        if (this.checked) {
                            $("#checkbox1").prop("checked", false);
                            $("#additionalField").show();
                        } else {
                            $("#additionalField").hide();
                        }
                    });
                });
            </script>

            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
   

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
