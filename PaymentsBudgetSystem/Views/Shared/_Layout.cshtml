@using static PaymentsBudgetSystem.Common.RoleNames;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Система за Бюджет и Разплащания</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaymentsBudgetSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Система за Бюджет и Разплащания</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <style>
        .btn {
            margin: 15px;
            border-color: green;
        }
    </style>


    <div class="row align-items-md-baseline">
        <div class="navbar-expand-md btn-group-vertical col-md-2">
            <button class="btn btn-lg btn-outline-info">
                @if (User.IsInRole(PrimaryRoleName))
                {
                    <a class="nav-link text-dark" asp-area="Budget" asp-controller="Primary" asp-action="Info">Бюджет</a>
                }
                else if (User.IsInRole(SecondaryRoleName))
                {
                    <a class="nav-link text-dark" asp-area="Budget" asp-controller="Secondary" asp-action="Info">Бюджет</a>
                }
            </button>
            <button class="btn btn-lg btn-outline-info">
                <a class="nav-link text-dark" asp-area="" asp-controller="Beneficiaries" asp-action="Info">Контрагенти</a>
            </button>
            <button class="btn btn-lg btn-outline-info">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Info">Персонал</a>
            </button>
            <hr />
            <button class="btn btn-lg btn-outline-info">
                <a class="nav-link text-dark" asp-area="" asp-controller="Gateway" asp-action="ChoosePayment">Банков превод</a>
            </button>

            <button class="btn btn-lg">Click button</button>
            <button class="btn btn-lg">Click button</button>
            <button class="btn btn-lg">Click button</button>
            <button class="btn btn-lg">Click button</button>
            <button class="btn btn-lg">Click button</button>
        </div>

        <style>
            .pb-3 {
                background-color: lightcyan
            }
        </style>


        <div class="container col-md-10">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Система за Бюджет и Разплащания - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
