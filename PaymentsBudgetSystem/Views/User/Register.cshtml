@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Username</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="checkbox" id="checkbox1" name="checkbox1" class="exclusive-checkbox" />
            <label for="checkbox1">Първостепенен РБ</label>

            <input type="checkbox" id="checkbox2" name="checkbox2" class="exclusive-checkbox" />
            <label for="checkbox2">Второстепенен РБ</label>

            <div id="additionalField" style="display: none;">
                <ol>
                    @foreach (var item in Model.PrimaryInstitution)
                    {
                        <li>@item.Value</li>
                    }
                </ol>
                <label asp-for="@Model.InputForPrimary">Избор на ПРБ</label>
                <input type="text" id="inputField" name="inputField" />
            </div>

            <script>
                $(document).ready(function () {
                    $("#checkbox1").change(function () {
                        if (this.checked) {
                            $("#checkbox2").prop("checked", false);
                            $("#additionalField").hide();
                            $@Model.IsSecondary = false;
                        }
                    });

                    $("#checkbox2").change(function () {
                        if (this.checked) {
                            $("#checkbox1").prop("checked", false);
                            $("#additionalField").show();
                            $@Model.IsSecondary = true;
                        } else {
                            $("#additionalField").hide();
                        }
                    });
                });
            </script>




            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

